{
  "name": "secureprint-pro",
  "version": "1.0.0",
  "description": "A professional build setup for the SecurePrint application.",
  "main": "server.js",
  "scripts": {
    "start": "npm run build:css && node server.js",
    "build:css": "npx tailwindcss -i ./public/src/input.css -o ./public/dist/output.css",
    "watch:css": "npx tailwindcss -i ./public/src/input.css -o ./public/dist/output.css --watch",
    "dev": "concurrently \"npm:watch:css\" \"nodemon server.js\""
  },
  "author": "sudipto",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^5.3.7",
    "clamscan": "^2.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.12.0",
    "short-uuid": "^4.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.3"
  }
}
